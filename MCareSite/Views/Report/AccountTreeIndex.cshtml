@model FastReport.Web.WebReport
@using NajmetAlraqee.Site.Services;
@using NajmetAlraqeeSite.Resources

@inject LocService SharedLocalizer

<div class="block-header">
    <ol class="breadcrumb breadcrumb-col-cyan">
        <li><a href=@Url.Action("index","Home")><i class="material-icons">home</i>@SharedLocalizer.GetLocalizedHtmlString("Home") </a></li>
        <li><a href="javascript:void(0);"><i class="material-icons">library_books</i> @SharedLocalizer.GetLocalizedHtmlString("AccountTrees")</a></li>
    </ol>
</div>

<div class="col-md-12">
    <div class="card">
        <br />
        <form asp-action="AccountTreeIndex">
            <div class="raw">
                <div class="col-md-12">
                    <div class="row clearfix">
                        <div class="col-sm-4 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text"  id="accNo"   name="accNo" class="form-control" style="font-family:Droid Arabic Kufi" placeholder="رقم الحساب ">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="accName"  name="accName" class="form-control" style="font-family:Droid Arabic Kufi" placeholder=" أسم الحساب">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text"  id="accountLevel" name="accountLevel" class="form-control" style="font-family:Droid Arabic Kufi" placeholder="مستوي الحساب">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <button class="btn btn-raised btn-sm btn-info m-b-0 m-t-0" style="font-family:Droid Arabic Kufi;right:1080px" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Search")</button>
                    </div>
                </div>
            </div>
        </form>
        <br />
    </div>
</div>
<br />
<div class="card">
    <br />
    <div class="row">
        <div class="col-md-12">
            @await Model.Render()
        </div>
        <br />
    </div>
</div>


