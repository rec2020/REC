@using Microsoft.AspNetCore.Identity
@using NajmetAlraqeeSite.Models
@using NajmetAlraqeeSite.Resources

@inject LocService SharedLocalizer
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager




@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">

        @*<li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>*@
        @*<a href="@Url.Action("Logout","Account" ,FormMethod.Post)" class="mega-menu" data-close="true"><i class="zmdi zmdi-power"></i></a>*@
        
            <button type="submit" title="@SharedLocalizer.GetLocalizedHtmlString("Logout")" class="zmdi zmdi-power"></button>
       

    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">@SharedLocalizer.GetLocalizedHtmlString("Register")</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">@SharedLocalizer.GetLocalizedHtmlString("Login")</a></li>
    </ul>
}
