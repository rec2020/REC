@model NajmetAlraqee.Site.ViewModels.CountryViewModel
@using NajmetAlraqeeSite.Resources

@inject LocService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("DeleteCountry");
}




<div class="block-header">
    <ol class="breadcrumb breadcrumb-col-cyan">
        <li><a href=@Url.Action("index","Countries")><i class="material-icons">home</i> @SharedLocalizer.GetLocalizedHtmlString("Countries")</a></li>
        <li><a href="javascript:void(0);"><i class="material-icons">library_books</i>@SharedLocalizer.GetLocalizedHtmlString("DeleteCountry")</a></li>
    </ol>
</div>

<div>
    <center>
        <h3> @SharedLocalizer.GetLocalizedHtmlString("MessageDeleteCountry") @Model.EnglishName ?</h3>
        <br />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Delete")" class="btn  btn-raised btn-danger waves-effect" />
            <a asp-action="Index" class="btn btn-raised">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
        </form>
    </center>


</div>
