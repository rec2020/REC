@model PaginatedList<NajmetAlraqee.Data.Entities.DoctorVacation>
@using NajmetAlraqee.Site.Services;
@using NajmetAlraqeeSite.Resources

@inject LocService SharedLocalizer
@{
    ViewData["Title"] = "Index";
}
<div class="block-header">
    @*<h2>Doctor Vacation</h2>*@
    <ol class="breadcrumb breadcrumb-col-cyan">
        <li><a href=@Url.Action("index","Home")><i class="material-icons">home</i>@SharedLocalizer.GetLocalizedHtmlString("Home")</a></li>
        <li><a href="javascript:void(0);"><i class="material-icons">library_books</i>@SharedLocalizer.GetLocalizedHtmlString("DoctorVacation")</a></li>
    </ol>
    @*<div>
            <a class="btn btn-round pull-right bg-cyan waves-effect" asp-action="Add">Add Vacation</a>
        </div>*@
</div>


<div class="raw">
    <div class="card">
        <div class="body">
            <form asp-action="Index">
                <div class="raw clearfix">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="form-line">
                                <input class="form-control" name="Search" placeholder=@SharedLocalizer.GetLocalizedHtmlString("Search") type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("FromDate")</label>
                            <div class="form-line">
                                <input name="FromDate" type="date" value="@ViewBag.FromDate" class="form-control" placeholder=@SharedLocalizer.GetLocalizedHtmlString("FromDate") />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("ToDate")</label>
                            <div class="form-line">
                                <input name="ToDate" type="date" value="@ViewBag.ToDate"  class="form-control" placeholder=@SharedLocalizer.GetLocalizedHtmlString("ToDate") />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <button class="btn btn-raised btn-sm btn-success m-b-0 m-t-0" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Search")</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-md-12 col-xs-12">
            <div class="card patients-list">
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("StartingOn"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("EndingOn"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("CreatedOn"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("Doctor"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("Hospital"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("Type"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("Status"))
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartingOn)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndingOn)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedOn)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Doctor.EnglishName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hospital.EnglishName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VacationType.EnglishName)
                                        </td>
                                        <td>
                                            <span class="label label-success">
                                                @Html.DisplayFor(modelItem => item.VacationStatus.EnglishName)
                                            </span>
                                        </td>
                                        <td>
                                            @if (User.IsInRole("Doctor"))
                                            {
                                                <a style="color:darkred" asp-action="Edit" asp-route-id="@item.Id" title=@SharedLocalizer.GetLocalizedHtmlString("Edit") class="waves-cyan waves-circle zmdi zmdi-edit"></a>
                                                <a style="color:red" asp-action="Delete" asp-route-id="@item.Id" title=@SharedLocalizer.GetLocalizedHtmlString("Delete") class="waves-cyan waves-circle zmdi zmdi-delete"></a>
                                            }
                                            @if (User.IsInRole("Administrator"))
                                            {
                                                <a style="color:darkcyan" asp-action="Approve" title=@SharedLocalizer.GetLocalizedHtmlString("Approve") asp-route-id="@item.Id" class="waves-cyan waves-circle zmdi zmdi-badge-check"></a>
                                                <a style="color:darkcyan" asp-action="Rject" title=@SharedLocalizer.GetLocalizedHtmlString("Rject") asp-route-id="@item.Id" class="waves-cyan waves-circle zmdi zmdi-mood-bad"></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-page="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    @SharedLocalizer.GetLocalizedHtmlString("Previous")
</a>
<a asp-action="Index"
   asp-route-page="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    @SharedLocalizer.GetLocalizedHtmlString("Next")
</a>