@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>:: NajmetAlraqee Hospital ::</title>
    <meta name="description" content="WrapTheme, Hospital Admin">
    <meta name="keywords" content="adminX, Bootstrap4, Hospital, Angular4, Material Design">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!-- Custom Css -->
    <link href="~/themeforest/HTML/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link href="~/themeforest/HTML/assets/css/main.css" rel="stylesheet">
    <link href="~/themeforest/HTML/assets/css/login.css" rel="stylesheet">

    <!-- choose a theme from css/themes instead of get all themes -->
    <link href="~/themeforest/HTML/assets/css/themes/all-themes.css" rel="stylesheet" />
</head>

<body class="theme-cyan">
    <div class="authentication">
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-xl-3 col-lg-4 col-md-12 col-sm-12 p-r-0">
                    <div class="card">
                        <h4 class="l-login"style="font-family:Droid Arabic Kufi;margin-left: 90px">
                           تسجيل مستخدم 
                        </h4>
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <div asp-validation-summary="All" class="text-danger" style="font-family:Droid Arabic Kufi" dir="rtl"></div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label class="form-label" style="font-family:Droid Arabic Kufi;margin-left:240px" dir="rtl">أدخل الاسم</label>
                                    <input type="text" class="form-control" style="font-family:Droid Arabic Kufi" dir="rtl" >
                                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label class="form-label" style="font-family:Droid Arabic Kufi;margin-left:210px" dir="rtl">البريد الالكتروني</label>
                                    <input asp-for="Email" type="text" class="form-control" style="font-family:Droid Arabic Kufi" dir="rtl" >
                                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label class="form-label" style="font-family:Droid Arabic Kufi;margin-left:240px" dir="rtl">كلمة المرور</label>
                                    <input asp-for="Password" class="form-control" style="font-family:Droid Arabic Kufi" dir="rtl" />
                                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label class="form-label" style="font-family:Droid Arabic Kufi;margin-left:210px" dir="rtl">تاكيد كلمة المرور</label>
                                    <input asp-for="ConfirmPassword" class="form-control" style="font-family:Droid Arabic Kufi" dir="rtl"  />
                                   
                                </div>
                            </div>
                         
                            <input type="submit" value="تسجيل" style="font-family:Droid Arabic Kufi" class="btn btn-raised g-bg-cyan waves-effect" />
                           
                            <div class="m-t-10 m-b--5"> <a href="@Url.Action("login","Account")">You already have a membership?</a> </div>
                        </form>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8 col-md-12 col-sm-12 p-l-0">
                    <div class="l-detail">
                        <h5 class="position">Welcome</h5>
                        <h1 class="position"><img src="~/themeforest/HTML/assets/images/logo.svg" alt="profile img"><span>MC</span>are <span>H</span>ospitals</h1>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/themeforest/HTML/assets/bundles/libscripts.bundle.js"></script> <!-- Bootstrap JS and jQuery v3.2.1 -->
    <script src="~/themeforest/HTML/assets/bundles/vendorscripts.bundle.js"></script> <!-- slimscroll, waves Scripts Plugin Js -->

    <script src="~/themeforest/HTML/assets/bundles/mainscripts.bundle.js"></script><!-- Custom Js -->
</body>
</html>







