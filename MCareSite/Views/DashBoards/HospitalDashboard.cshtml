@model NajmetAlraqeeSite.ViewModels.HospitalDashBoardViewModels
@using NajmetAlraqeeSite.Resources
@inject LocService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("HospitalDashboard");
}

@*<div></div>*@
<div class="block-header">
    <ol class="breadcrumb">
        <li><a href="index.html">@SharedLocalizer.GetLocalizedHtmlString("Home")</a></li>
        <li class="active">@SharedLocalizer.GetLocalizedHtmlString("HospitalDashboard")</li>
    </ol>
</div>

<div class="row clearfix">
    <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card widget-stat">
            <div class="body">
                <div class="media">
                    <div class="media-icon g-bg-cyan">
                        <i class="zmdi zmdi-hospital zmdi-hc-2x"></i>
                    </div>
                    <div class="media-text" style="margin-right:8px">
                        <span class="title">@SharedLocalizer.GetLocalizedHtmlString("HospitalOffers")</span>
                        <span class="value">@Model.Offers</span>
                    </div>
                </div>
                <p class="media-footer text-success">
                    <i class="zmdi zmdi-caret-down"></i>
                    <span></span>
                </p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card widget-stat">
            <div class="body">
                <div class="media">
                    <div class="media-icon g-bg-green">
