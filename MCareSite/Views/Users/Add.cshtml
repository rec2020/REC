@model NajmetAlraqeeSite.ViewModels.UserViewModels

@using NajmetAlraqeeSite.Resources

@inject LocService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("AddUser");
}

<div class="container-fluid">
    <div class="block-header">
        @*<h2>Add Doctor</h2>*@
        <ol class="breadcrumb breadcrumb-col-cyan">
            <li><a href=@Url.Action("index","Users")><i class="material-icons">home</i>@SharedLocalizer.GetLocalizedHtmlString("Users")</a></li>
            <li><a href="javascript:void(0);"><i class="material-icons">library_books</i>@SharedLocalizer.GetLocalizedHtmlString("AddUser")</a></li>
        </ol>
    </div>
    <form asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2  style="font-family:Droid Arabic Kufi">@SharedLocalizer.GetLocalizedHtmlString("BasicInformation")</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                            <ul class="dropdown-menu pull-left"></ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="row clearfix">
                      
                        <div class="col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("Name") </label>
                                <div class="form-line">
                                    <input asp-for="Name"  style="font-family:Droid Arabic Kufi" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Name")" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-xs-12" >
                            <div class="form-group">
                                <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("Email")</label>
                                <div class="form-line">
                                    <input asp-for="Email"  style="font-family:Droid Arabic Kufi" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Email")" />
                                </div>
                            </div>
                        </div>
                      
                        <div class="col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("Password") </label>
                                <div class="form-line">
                                    <input asp-for="Password"  style="font-family:Droid Arabic Kufi" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Password")" />
                                </div>
                            </div>
                        </div>
                     
                        <div class="col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("ConfirmPassword") </label>
                                <div class="form-line">
                                    <input asp-for="ConfirmPassword"  style="font-family:Droid Arabic Kufi" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("ConfirmPassword")" />
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                <div class="col-sm-12">
                    <button type="submit" value="Add" style="right:450Px;font-family:Droid Arabic Kufi" class="btn btn-raised g-bg-cyan pull-right">@SharedLocalizer.GetLocalizedHtmlString("Save")</button>
                    <a asp-action="Index" class="btn btn-raised" style="right:450Px;font-family:Droid Arabic Kufi">@SharedLocalizer.GetLocalizedHtmlString("Cancel")</a>
                </div>
            </div>
        </div>
    </form>
</div>

