@model NajmetAlraqee.Site.ViewModels.CityViewModel
@{
    ViewData["Title"] = "Add";
}



<div class="block-header">
    @*<h2>Edit City</h2>*@
    <ol class="breadcrumb breadcrumb-col-cyan">
        <li><a href=@Url.Action("index","Cities")><i class="material-icons">home</i> Cities</a></li>
        <li><a href="javascript:void(0);"><i class="material-icons">library_books</i>Edit City</a></li>
    </ol>
</div>
<div class="container-fluid">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Basic Information</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-4 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Arabic Name</label>
                                    <input asp-for="ArabicName" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>English Name</label>
                                    <input asp-for="EnglishName" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Country</label>
                                    <select asp-for="CountryId" class="form-control" asp-items="@ViewBag.CountryId"><option></option></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <button type="submit" value="Add" class="btn btn-raised g-bg-cyan pull-right">Save</button>
                    <button type="submit" class="btn btn-raised">Cancel</button>
                </div>
            </div>
        </div>

    </form>
</div>
