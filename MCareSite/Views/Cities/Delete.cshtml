@model NajmetAlraqee.Site.ViewModels.CityViewModel
@using NajmetAlraqeeSite.Resources

@inject LocService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("DeleteCity");
}




<div class="block-header">
    @*<h2>Delete City</h2>*@
    <ol class="breadcrumb breadcrumb-col-cyan">
        <li><a href=@Url.Action("index","Cities")><i class="material-icons">home</i>@SharedLocalizer.GetLocalizedHtmlString("Cities")</a></li>
        <li><a href="javascript:void(0);"><i class="material-icons">library_books</i>@SharedLocalizer.GetLocalizedHtmlString("DeleteCity")</a></li>
    </ol>
</div>

<div>
    <center>
        <h3> Are you sure want to delete City ?</h3>
        <br />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Delete")" class="btn  btn-raised btn-danger waves-effect" />
            <a asp-action="Index" class="btn btn-raised">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
        </form>
    </center>


</div>
