@model PaginatedList<NajmetAlraqee.Data.Entities.DoctorScheduleConfiguration>
@using NajmetAlraqee.Site.Services;
@using NajmetAlraqeeSite.Resources

@inject LocService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("DoctorsScheduleConfiguration");
}


@*<br />*@
<div class="block-header">
    @*<span style="color:darkcyan"><strong>Doctors Schedule Configuration</strong></span>*@
    <ol class="breadcrumb breadcrumb-col-cyan">
        <li><a href=@Url.Action("index","Home")><i class="material-icons">home</i>@SharedLocalizer.GetLocalizedHtmlString("Home")</a></li>
        <li><a href="javascript:void(0);"><i class="material-icons">library_books</i> @SharedLocalizer.GetLocalizedHtmlString("DoctorsScheduleConfiguration")</a></li>
    </ol>
    @*<div>
            <a class="btn btn-round pull-right bg-cyan waves-effect" asp-action="Add">Add Configuration</a>
        </div>*@
</div>

<div class="raw">
    <div class="card">
        <div class="body">
            <form asp-action="Index">
                <div class="raw clearfix">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="form-line">
                                <input class="form-control" name="Search" placeholder=@SharedLocalizer.GetLocalizedHtmlString("Search") type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("FromDate")</label>
                            <div class="form-line">
                                <input name="FromDate" type="date"  class="form-control" placeholder=@SharedLocalizer.GetLocalizedHtmlString("FromDate") />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label style="color:black">@SharedLocalizer.GetLocalizedHtmlString("ToDate")</label>
                            <div class="form-line">
                                <input name="ToDate" type="date"  class="form-control" placeholder=@SharedLocalizer.GetLocalizedHtmlString("ToDate") />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <button class="btn btn-raised btn-sm btn-success m-b-0 m-t-0" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Search")</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-md-12 col-xs-12">
            <div class="card patients-list">
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("Doctor"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("Hospital"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("StartingOn"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("EndOn"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("MorningStartingTime"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("MorningEndingTime"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("EveningStartingTime"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("EveningEndingTime"))
                                    </th>
                                    <th>
                                        @Html.DisplayName(SharedLocalizer.GetLocalizedHtmlString("PeroidInMintues"))
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Doctor.EnglishName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hospital.EnglishName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartOn)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndOn)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MorningStartingTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MorningEndingTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EveningStartingTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EveningEndingTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PeroidInMintues)
                                        </td>
                                        <td>
                                            @*<a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="waves-cyan waves-circle zmdi zmdi-edit"></a>
                                                <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="waves-cyan waves-circle zmdi zmdi-info"></a>*@
                                            <a asp-action="Delete" asp-route-id="@item.Id" title="@SharedLocalizer.GetLocalizedHtmlString("Delete")" class="waves-cyan waves-circle zmdi zmdi-delete"></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-page="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    @SharedLocalizer.GetLocalizedHtmlString("Previous")
</a>
<a asp-action="Index"
   asp-route-page="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    @SharedLocalizer.GetLocalizedHtmlString("Next")
</a>


